<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/btn_img"
    tools:context="com.example.rajat.labexam.MainActivity">


    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/christ_logo" />

    <Button
        android:id="@+id/ExistingStudent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Existing Christite"
        android:textColor="#ffffff"
        android:background="@drawable/button_bg_rounded_corners"
        android:padding="25dp"
        android:layout_margin="10dp"/>

    <Button
        android:id="@+id/SearchItem"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Search item"
        android:background="@drawable/button_bg_rounded_corners"
        android:padding="25dp"
        android:textColor="#ffffff"
        android:layout_margin="10dp"/>

    <Button
        android:id="@+id/PassedOutStudents"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="PassedOut Christite"
        android:background="@drawable/button_bg_rounded_corners"
        android:padding="25dp"
        android:textColor="#ffffff"
        android:layout_margin="10dp"/>

    <Button
        android:id="@+id/popularitem"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Popular Items"
        android:background="@drawable/button_bg_rounded_corners"
        android:padding="25dp"
        android:textColor="#ffffff"
        android:layout_margin="10dp"/>

    <TextView
        android:id="@+id/moreinfo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_margin="10dp"
        android:textSize="15dp"
        android:textColor="#ffffff"
        android:text="Want To Know More?"/>

    <Switch
        android:id="@+id/wifi_switch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginStart="15dp"
        android:layout_marginTop="15dp"
        android:textColor="#ffffff"
        android:textSize="16dp"
        android:text="Wifi"
        app:layout_constraintVertical_bias="0.643"/>

</LinearLayout>
