<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/match"
    tools:context="com.example.rajat.labexam2.MainActivity">

    <ImageView
        android:layout_margin="30dp"
        android:layout_gravity="center"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:background="@drawable/cri"/>

    <TableLayout
        android:padding="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TableRow
            android:layout_marginBottom="20dp"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#ffffff"
                android:textSize="20dp"
                android:text="1st Team"/>

            <Spinner
                android:id="@+id/team1"
                android:hint="Team1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </TableRow>

        <TableRow android:layout_marginBottom="20dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#ffffff"
                android:textSize="20dp"
                android:text="2nd Team"/>

            <Spinner
                android:id="@+id/team2"
                android:hint="Team1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </TableRow>

        <TableRow android:layout_marginBottom="20dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#ffffff"
                android:textSize="20dp"
                android:text="Bating Team"/>

                <RadioGroup android:id="@+id/batingteam" android:orientation="horizontal"
                    android:paddingStart="40dp">
                    <RadioButton
                        android:id="@+id/bat_team1"
                        android:textColor="#ffffff"
                        android:text="1st Team"
                        android:textSize="17dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <RadioButton
                        android:id="@+id/bat_team2"
                        android:textColor="#ffffff"
                        android:text="2nd Team"
                        android:textSize="17dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </RadioGroup>
        </TableRow>

        <TableRow android:layout_marginBottom="20dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#ffffff"
                android:textSize="20dp"
                android:text="Overs"/>

            <RadioGroup android:id="@+id/over_select" android:orientation="horizontal"
                android:paddingStart="40dp">
                <RadioButton
                    android:id="@+id/over20"
                    android:textColor="#ffffff"
                    android:text="20 Overs"
                    android:textSize="17dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <RadioButton
                    android:id="@+id/over50"
                    android:textColor="#ffffff"
                    android:text="50 Overs"
                    android:textSize="17dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </RadioGroup>
        </TableRow>

    </TableLayout>

    <Button
        android:id="@+id/login"
        android:layout_marginBottom="20dp"
        android:layout_gravity="center"
        android:paddingStart="20dp"
        android:textSize="12dp"
        android:drawableStart="@drawable/ogin"
        android:textColor="#00acc1"
        android:background="@drawable/button_bg_rounded_corners"
        android:layout_width="230dp"
        android:text="Login To Update Score"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/score"
        android:layout_gravity="center"
        android:textSize="12dp"
        android:textColor="#00acc1"
        android:background="@drawable/button_bg_rounded_corners"
        android:layout_width="180dp"
        android:text="Get Score"
        android:layout_height="wrap_content" />


</LinearLayout>
